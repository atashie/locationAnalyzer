# Distance Finder - Production Environment Variables
# Configure these in Railway's environment variables panel

# App Settings
DEBUG=false
ENVIRONMENT=production
LOG_LEVEL=INFO

# CORS - Add your Vercel frontend URL here
# Example: https://distance-finder.vercel.app
CORS_ORIGINS=https://your-frontend-url.vercel.app

# Rate Limits
MAX_SEARCH_RADIUS_MILES=25
MAX_CRITERIA_COUNT=8

# OSMnx (Railway provides ephemeral storage, cache may not persist)
OSMNX_TIMEOUT=300
